class itemlist:
.TituloProducto {
    text-align: center;
    margin-top: 50px;
    background-color: #ddd;
    font-size: 30px;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    color: rgb(47, 42, 47);
}

.item-list-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    margin: auto;
    width: 1500px;

}

.product {
    border: 1px solid #ddd;
    padding: 5px;
    text-align: center;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    width: 190px;
    height: 322px;
    margin: 0 auto;
    margin: 3px;

}



.product-image {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
}

.product-title {
    font-size: 1em;
    margin: 3px;
}

.product-marca {
    font-size: 0.9em;
    color: #555;
}

@media (max-width: 768px) {
    .item-list-container {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 480px) {
    .item-list-container {
        grid-template-columns: 1fr;
    }
}

.boton-compra{

    width: 30px;
    border-radius: 17px;
    height: 40px;
    background-color: rgb(160, 21, 91);
    color: white;
}
